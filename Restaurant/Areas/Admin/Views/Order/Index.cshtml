@using Restaurant.Models
@model IEnumerable<OrderModel>;
@{
    ViewData["Title"] = "Order Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="content" class="content-area">

    <div class="pagetitle">
        <h1>Order Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active">Data</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">

                        <!-- Flex container for title and Add button -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title">Datatables</h5>
                            <a href="@Url.Action("Create", "Order")" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Add New Order
                            </a>
                        </div>

                        @if (Model == null || !Model.Any())
                        {
                            <!-- Display a message if there is no data -->
                            <div class="alert alert-warning" role="alert">
                                No orders found.
                            </div>
                        }
                        else
                        {
                            <!-- Table with stripped rows -->
                            <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th>
                                            <b>Id</b>
                                        </th>
                                        <th>UserId</th>
                                        <th>Message</th>
                                        <th data-type="date" data-format="YYYY/DD/MM">createdDate</th>
                                        <th data-type="date" data-format="YYYY/DD/MM">updatedDate</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Actions</th> <!-- New column for action buttons -->
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        if (item != null)
                                        {
                                            <tr>
                                                <td>@item.id</td>
                                                <td>@item.userId</td>
                                                <td>@item.message</td>
                                                <td>@item.createdDate?.ToString("yyyy/MM/dd")</td>
                                                <td>@item.updatedDate?.ToString("yyyy/MM/dd")</td>
                                                <td>@item.total</td>
                                                <td>@item.status</td>
                                                <td>
                                                    <!-- Update Button -->
                                                    <a href="@Url.Action("Edit", "Order", new { id = item.id })"
                                                       class="btn btn-warning btn-sm">
                                                        <i class="bi bi-pencil"></i> Update
                                                    </a>
                                                    <!-- Detail Button -->
                                                    <a href="@Url.Action("Detail", "Order", new { id = item.id })"
                                                       class="btn btn-info btn-sm">
                                                        <i class="bi bi-eye"></i> Detail
                                                    </a>
                                                    <!-- Delete Button -->
                                                    <a href="javascript:void(0);" class="btn btn-danger btn-sm"
                                                       data-bs-toggle="modal" data-bs-target="#deleteModal-@item.id">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>

                                                    <!-- Delete Confirmation Modal -->
                                                    <div class="modal fade" id="deleteModal-@item.id" tabindex="-1"
                                                         aria-labelledby="deleteModalLabel-@item.id" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="deleteModalLabel-@item.id">
                                                                        Confirm
                                                                        Deletion
                                                                    </h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                                            aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    Are you sure you want to delete the order
                                                                    <strong>@item.id</strong> from the user
                                                                    <strong>@item.userId</strong>?
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary"
                                                                            data-bs-dismiss="modal">
                                                                        Cancel
                                                                    </button>
                                                                    <a href="@Url.Action("Delete", "Order", new { id = item.id })"
                                                                       class="btn btn-danger">Confirm Delete</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->
                        }
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->