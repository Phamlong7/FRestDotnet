@using Restaurant.Models
@model IEnumerable<CategoryModel>;
@{
    ViewData["Title"] = "Category Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true" style="position: fixed; top: 20px; right: 20px; z-index: 1050; min-width: 250px;">
        <div class="d-flex">
            <div class="toast-body">
                @TempData["SuccessMessage"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
}

<main id="content" class="content-area">

    <div class="pagetitle">
        <h1>Category Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active">Data</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">

                        <!-- Flex container for title and Add button -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title">Datatables</h5>
                            <a href="@Url.Action("Create", "Category")" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Add New Category
                            </a>
                        </div>

                        @if (Model == null || !Model.Any())
                        {
                            <!-- Display a message if there is no data -->
                            <div class="alert alert-warning" role="alert">
                                No categories found.
                            </div>
                        }
                        else
                        {
                            <!-- Table with stripped rows -->
                            <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th><b>Id</b></th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th data-type="date" data-format="YYYY/MM/DD">Created Date</th>
                                        <th data-type="date" data-format="YYYY/MM/DD">Updated Date</th>
                                        <th>Status</th>
                                        <th>Actions</th> <!-- New column for action buttons -->
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        if (item != null)
                                        {
                                            <tr>
                                                <td>@item.id</td>
                                                <td>@item.name</td>
                                                <td>@item.description</td>
                                                <td>@item.createdDate?.ToString("yyyy/MM/dd")</td>
                                                <td>@item.updatedDate?.ToString("yyyy/MM/dd")</td>
                                                <td style="color: @(item.status == "ACTIVE" ? "green" : "red")">
                                                    @item.status
                                                </td>
                                                <td>
                                                    <!-- Update Button -->
                                                    <a href="@Url.Action("Edit", "Category", new { id = item.id })" class="btn btn-warning btn-sm">
                                                        <i class="bi bi-pencil"></i> Update
                                                    </a>
                                                    <!-- Delete Button -->
                                                    <a href="javascript:void(0);" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.id">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>

                                                    <!-- Delete Confirmation Modal -->
                                                    <div class="modal fade" id="deleteModal-@item.id" tabindex="-1" aria-labelledby="deleteModalLabel-@item.id" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="deleteModalLabel-@item.id">Confirm Deletion</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    Are you sure you want to delete the category <strong>@item.name</strong>?
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <a href="@Url.Action("Delete", "Category", new { id = item.id })" class="btn btn-danger">Confirm Delete</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        }
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->

<script>
    // Initialize toast notification with extended display time
    document.addEventListener('DOMContentLoaded', function () {
        var toastElList = [].slice.call(document.querySelectorAll('.toast'))
        var toastList = toastElList.map(function (toastEl) {
            return new bootstrap.Toast(toastEl, {
                delay: 10000,  // Display for 10 seconds (10000 milliseconds)
                autohide: true // Set to true for auto-hiding the toast
            })
        })
        toastList.forEach(toast => toast.show());
    });
</script>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
