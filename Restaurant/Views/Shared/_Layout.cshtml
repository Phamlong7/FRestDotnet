    <script> //script for logo change
        document.addEventListener("DOMContentLoaded", function () {
            const navbar = document.getElementById("ftco-navbar");
            const logo = document.getElementById("navbar-logo");

            const defaultLogoSrc = "/images/FRest_Logo.png";
            const scrolledAwakeLogoSrc = "/images/FRest_LogoBlack.png"; 
 
            function updateLogo() {
                if (navbar.classList.contains("scrolled") && navbar.classList.contains("awake")) {
                    logo.src = scrolledAwakeLogoSrc; 
                } else {
                    logo.src = defaultLogoSrc; 
                }
            }

            window.addEventListener("scroll", function () {
                updateLogo();
            });

            updateLogo();
        });
        $(document).ready(function () {
            // Click event for links with ajax-link class
            $('.ajax-link').on('click', function (event) {
                event.preventDefault(); // Prevent default navigation

                // Retrieve the URL from data-url attribute
                var url = $(this).data('url');

                // Load the URL content into #content-area using AJAX
                $.ajax({
                    url: url,
                    type: 'GET',
                    success: function (data) {
                        $('#content-area').html(data); // Display content in the specified area
                    },
                    error: function () {
                        $('#content-area').html('<p>Error loading content. Please try again later.</p>');
                    }
                });

                // Update active state for navigation links
                $('.nav-item').removeClass('active');
                $(this).closest('.nav-item').addClass('active');
            });
        });
    </script>
